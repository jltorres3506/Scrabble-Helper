<%- include('../partials/header') %>

<div id="login-container" class="container ">
  <div class="row ">
    <div class=" col-8  ">
          <h1 class="title">Form 1</h1>
          
          <%- include('../partials/errorMsgs') %>

          <form action="/validation/" method="POST">
            <div class=" email-container form-group">
              <label for="email">Email</label>
              <input id="input-fields-login-styles" type="email" class="form-control" name="email" autocomplete="off" value="<%= typeof email != 'undefined' ? email : '' %>">
            </div>
            <div class=" form-group">
                  <label for="firstName">First Name</label>
                  <input type="text" class="form-control" name="firstName" autocomplete="off" value="<%= typeof firstName != 'undefined' ? firstName : '' %>">
                </div>
                <div class=" form-group">
                  <label for="lastName">Last Name</label>
                  <input type="text" class="form-control" name="lastName" autocomplete="off" value="<%= typeof lastName != 'undefined' ? lastName : '' %>">
                </div>
            <div class="form-group">
              <label for="password">Password</label>
              <input id="input-fields-login-styles" type="password" class="form-control" name="password" >
            </div>
            <div class=" login-button-row row ">
                <div class="col-2 ">
                  <input class="btn btn-primary" type="submit"  value="Login" class="btn">
                </div>
           
            </div>
           
            
          </form>
        

       
     
    </div>

  </div>
</div>

<%- include('../partials/footer') %>
